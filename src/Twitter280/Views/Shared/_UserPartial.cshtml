@model Twitter280.Models.User

<div id="tweeis" class="panel left">
    <h1>Tweet Profile</h1>
    <div class="twiWrapper">
        <img class="avatar" src="http://www.gravatar.com/avatar/@Model.Profile.GetEmailHash()">
        <span class="name">
            @Html.RouteLink(Model.Profile.Name, "UserDefault", new { controller = "user", username = Model.Username, action = "index" })
        </span>@@@Model.Username
        <p>
            @Model.Tweets.Count @Html.ActionLink("Tweet", "Index", new { controller = "User", username = Model.Username })
            <span class="spacing">@Model.Followers.Count @Html.ActionLink("Followers", "followers")</span>
            <span class="spacing">@Model.Followings.Count @Html.ActionLink("Following", "following")</span><br>
            @Model.Profile.Bio
        </p>

        @Html.Partial("_FollowButtonPartial", Model)

    </div>
</div>